<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cmivxx.feedreader" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Feederator</name>
    <description>
        RSS Feed Reader for use with feederator.io web accounts.
    </description>
    <author email="cm@cmivxx.com" href="http://cmivxx.com">
        Chris Miller
    </author>
    <content src="index.html" />
    <access origin="*" />

	<platform name="android">
		<splash src="platforms/android/res/drawable-port-mdpi/splash.png" density="port-mdpi" />
		<splash src="platforms/android/res/drawable-port-hdpi/splash.png" density="port-hdpi" />
		<splash src="platforms/android/res/drawable-port-xhdpi/splash.png" density="port-xhdpi" />
	</platform>

		<preference name="Orientation" value="portrait" />
		<preference name="Fullscreen" value="true" />

		<preference name="KeepRunning" value="false"/>
		<preference name="LoadUrlTimeoutValue" value="10000"/>
		<preference name="SplashScreen" value="splash"/>
		<preference name="SplashScreenDelay" value="3000"/>
</widget>