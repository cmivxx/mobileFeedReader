<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cmivxx.feedreader" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <splash density="port-mdpi" src="platforms/android/res/drawable-port-mdpi/splash.png" />
    <splash density="port-hdpi" src="platforms/android/res/drawable-port-hdpi/splash.png" />
    <splash density="port-xhdpi" src="platforms/android/res/drawable-port-xhdpi/splash.png" />
    <name>Feederator</name>
    <description>
        RSS Feed Reader for use with feederator.io web accounts.
    </description>
    <author email="cm@cmivxx.com" href="http://cmivxx.com">
        Chris Miller
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />
    <preference name="KeepRunning" value="false" />
    <preference name="LoadUrlTimeoutValue" value="10000" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
